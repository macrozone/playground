.box
	position: relative
	cursor: alias
	padding: 0px
	
	
	background-color: white
	.controls
		display: none;
		position: absolute
		top: 10px
		right: 10px
		z-index: 100
	textarea
		width: 100%
		height: 100%

.box:hover
	.controls
		display: block;
	z-index: 100
	box-shadow: 1px 1px 8px rgba(255, 0, 0, 0.5)


.box.active
	border: 1px solid red
	.children
		opacity: 0.5
	.controls
		z-index: 100

.renderedContent
	padding: 8px
	min-height: 50px
	cursor: text


.boxcontainer 

.clear
	clear: both

.editContent
	position: absolute
	top: 0
	left: 0
	opacity: 0
	z-index: 10

.box.editMode
	.editContent

		opacity: 1
	.renderedContent
		visibility: hidden


